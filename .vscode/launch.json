  "version": "0.2.0",
  "configurations": [
      {
        "type": "robotframework-lsp",
        "name": "Robot Framework: Debug .robot file",
        "request": "launch",
        "cwd": "^\"\\${workspaceFolder}\"",
        "target": "^\"\\${file}\"",
        "terminal": "none",
        "env": {},
        "args": [
          "--outputdir", "/opt/robotframework/reports",
          "--exclude", "not-*",
          "--include", "smoke",
          "--loglevel", "TRACE:INFO"
        ]
      }
    ]
}
